<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1>URL Shortener</h1>

    <div>
      <form method="POST" action="/url">
        <label for="url">Enter Original URL</label>
        <input
          type="text"
          name="url"
          id="url"
          placeholder="https://example.com"
        />
        <button type="submit">Generate Short URL</button>
      </form>
      <% if (locals.id) { %>
      <p>
        URL Generated:
        <a target="_blank" href="http://localhost:8001/url/<%= id %>"
          >http://localhost:8001/url/<%= id %></a
        >
      </p>
      <%}%>
    </div>
    <div>
      <% if (locals.urls) { %>
      <table>
        <thead>
          <th>S.No</th>
          <th>Short ID</th>
          <th>Redirect URL</th>
          <th>Clicks</th>
          <th>Full URL</th>
        </thead>
        <tbody>
          <% urls.forEach((url, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= url.shortId %></td>
            <td><%= url.redirectURL %></td>
            <td><%= url.visitHistory.length %></td>
            <td>
              <a target="_blank" href="<%= url.redirectURL %>">Click Here</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% }%>
    </div>
  </body>
</html>
